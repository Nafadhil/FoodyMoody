<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9D1A6"
    tools:context=".activity.DetailPemesanan">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/stroke4"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="Detail Pemesanan"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>


    <TextView
        android:id="@+id/header"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:background="@drawable/stroke5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.817" />

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/stroke6"
        android:drawableLeft="@drawable/ic_baseline_edit_note_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat_light"
        android:hint="Jumlah"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#E9D1A6"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etharga"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etharga"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/stroke6"
        android:drawableLeft="@drawable/ic_baseline_edit_note_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat_light"
        android:hint="Harga"
        android:editable="false"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#E9D1A6"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etmakanan"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etmakanan"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/stroke6"
        android:drawableLeft="@drawable/ic_baseline_edit_note_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/montserrat_light"
        android:hint="Makanan"
        android:editable="false"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#E9D1A6"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:backgroundTint="#CC8B3B"
        android:drawableLeft="@drawable/ic_baseline_check_24"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="10dp"
        android:text="BELI"
        android:textAlignment="textStart"
        android:textColor="#E9D1A6"
        android:textSize="20sp"
        app:iconPadding="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jumlah"
        app:layout_constraintVertical_bias="0.019" />

  </androidx.constraintlayout.widget.ConstraintLayout>